public class AverageRainFall
{  
  public static void main ( String[] args )  
  {
    short april = 12;
    short may = 14;
    short june = 8;
    double average = (april + may + june) / 3.0;

    System.out.println("Rainfall for April: "  + april);
    System.out.println("Rainfall for May: " + may);
    System.out.println("Rainfall for June: " + june);
    System.out.println("Average rainfall: " + average);
  }
}


public class DegreestoRadians

{  
  public static void main ( String[] args )  
  {
    short degrees = 30;
    double rad = degrees * Math.PI/180;

    System.out.println("The radians of angle " + degrees + " is " + rad);
  }
}


public class Trigonometry
{  
  public static void main ( String[] args )  
  {
    double sine = Math.sin(0.5236);
    double cosine = Math.cos(0.5236);
    double sum = (sine * sine) + (cosine * cosine);

    System.out.println("sine: " + sine + " cosine: " + cosine + " sum of squares: " + sum );
  }
}
